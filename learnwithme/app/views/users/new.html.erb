<div id="section">
  <div class="container">
    <br><br><br>
    <a href="#" id="googleLogin">Google Login!</a><br>
    <a href="#" id="facebookLogin">Facebook Login!</a> <br>

    <div>
      <%= form_for @user, class: 'form-inline' do |f| %>

        <%= f.label :email %>:
        <%= f.email_field :email, class: 'form-control' %><br />

        <%= f.label :password %>:
        <%= f.password_field :password, class: 'form-control' %><br />

        <%= f.submit "Login!" %>
      <% end %>
    </div>

    <p>---------------------------------------</p>

    <div>
      <%= form_for @user, class: 'form-inline' do |f| %>
          <%= f.label :first_name %>:
          <%= f.text_field :first_name, class: 'form-control' %>

        <%= f.label :last_name %>:
        <%= f.text_field :last_name, class: 'form-control' %><br />

        <%= f.label :username %>:
        <%= f.text_field :username, class: 'form-control' %><br />

        <%= f.label :email %>:
        <%= f.email_field :email, class: 'form-control' %><br />

        <%= f.label :password %>:
        <%= f.password_field :password, class: 'form-control' %><br />

        <%= f.label :password_confirmation %>:
        <%= f.password_field :password_confirmation, class: 'form-control' %><br />

        <%= f.submit "Signup!" %>
      <% end %>
    </div>

  </div>
</div>
