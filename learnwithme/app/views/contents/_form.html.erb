

<div class="row">
  <div class="col-sm-8 col-sm-offset-2">
    <h2>Add Content:</h2>
    <%= form_for([@course, @course.contents.build], remote: true,
      class: "form") do |f| %>
      <div class="form-group">
        <%= f.label :title %>:
        <%= f.text_field :title, value: "DBC Fantasy", class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :description %>:
        <%= f.text_field :description, value: "So, so so fun.", class: 'form-control' %>
      </div>

      <div class="form-group">
        <p>Please select a content category: </p>
        <%= f.radio_button :category, "article" %>
        <%= f.label :category_article, "article" %>
        <%= f.radio_button :category, "image" %>
        <%= f.label :category_image, "image" %>
        <%= f.radio_button :category, "video" %>
        <%= f.label :category_video, "video" %>
      </div>

      <div class="form-group">
        <%= f.label :link %>:
        <%= f.text_field :link, value: "http://guides.rubyonrails.org/working_with_javascript_in_rails.html", class: 'form-control' %>
      </div>

      <%= f.submit %>
    <%  end %>
  </div>
</div>

