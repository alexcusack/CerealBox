
<% if @article %>
  <%= render 'content/content_errors' %>
<% end %>

<%= form_for([@course, @course.articles.build],
  remote: true, data: { content: "article" }) do |f| %>
  <%= f.label :title %>:
  <%= f.text_field :title %><br />

  <%= f.label :link %>:
  <%= f.text_field :link, value: "http://guides.rubyonrails.org/working_with_javascript_in_rails.html" %><br />

  <%= f.submit %>
<%  end %>

