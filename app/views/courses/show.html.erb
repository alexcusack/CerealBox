<div id="section">
  <div class="course-image">
    <div id="<%= @course.title.downcase %>">
      <div class="container">
        <h1 class="text-center"><%= @course.title.upcase %></h1>
      </div>
    </div>
  </div>
  <div class="container">
    <div class="row">
      <% if @relationship && !@relationship.pledged? %>
      <div class="stripe pledge ">
        <h4>Pledge your course commitment to get started!</h4>
        <%= form_tag charges_path do %>
        <input type="hidden" name="course" value="<%= @course.id %>">
        <article>
          <label class="amount">
            <span>Amount: $5.00</span>
          </label>
        </article>
        <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
        data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
        data-description="Commit to a course!"
        data-amount="500"></script>
        <% end %>
      </div>
      <% else %>
      <div class="stripe pledge "><h3>You've already Pledged!</h3></div>
      <% end %>
    </div>

    <div class="row">
      <div class='sheet-slot'>
        <div class="row">
          <h4> Course members: </h4>
          <% @members.each do |member| %>
            <% if member.avatar_url === nil %>
                <%= image_tag member.gravatar_url %>
            <% end %>
          <% end %>
        </div>
      </div>


      <% if @course.owner == current_user %>
      <div class="row">
        <%= link_to 'New Sheet', new_course_sheet_path(@course) %>
      </div>
      <div class="row">
        <%= render 'contribute_sheets' %>
      </div>
      <% end %>
    </div>
  </div>
</div>




