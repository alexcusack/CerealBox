<div id="section">
  <div id="<%= @course.title.downcase %>">
    <div class="container">
      <h1 class="text-center"><%= @course.title.upcase %></h1>

      <div class="row">
        <h4> Members of this Course! </h4>
        <% @users.each do |user| %>
          <p>
            <img src=<%= user.avatar_url %> width="50" height="50"> - <%= user.username %>
          </p>
        <% end %>
      </div>

      <% if @course.owner == current_user %>
        <div class="row">
          <%= link_to 'New Sheet', new_course_sheet_path(@course) %>
        </div>
      <% end %>
    </div>
  </div>

  <div class="row">
    <% @sheets.each do |sheet| %>
      <div class="col-sm-4">
        <%= render partial: "sheets/sheets_block", locals: {sheet: sheet} %>
      </div>
    <% end %>
  </div>

</div>


