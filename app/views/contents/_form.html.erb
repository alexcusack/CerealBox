

<div class="row">
  <div class="col-sm-8 col-sm-offset-2">
    <h2>Add Content:</h2>
    <%= form_for([@course], remote: true,
      class: "form") do |f| %>
      <div class="form-group">
        <%= f.label :title %>:
        <%= f.text_field :title, value: "DBC Fantasy", class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :description %>:
        <%= f.text_field :description, value: "So, so so fun.", class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :video %>:
        <%= f.text_field :video, value: "http://guides.rubyonrails.org/working_with_javascript_in_rails.html", class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :article %>:
        <%= f.text_field :article, value: "http://guides.rubyonrails.org/working_with_javascript_in_rails.html", class: 'form-control' %>
      </div>

            <div class="form-group">
        <%= f.label :image %>:
        <%= f.text_field :image, value: "http://guides.rubyonrails.org/working_with_javascript_in_rails.html", class: 'form-control' %>
      </div>

            <div class="form-group">
        <%= f.label :map %>:
        <%= f.text_field :map, value: "http://guides.rubyonrails.org/working_with_javascript_in_rails.html", class: 'form-control' %>
      </div>

      <%= f.submit %>
    <%  end %>
  </div>
</div>

