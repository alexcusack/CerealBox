


  <div class="card medium">
    <div class="card-image">
      <img src="<%= sheet.image %>">
      <span class="card-title"><%= sheet.title %></span>
    </div>
    <div class="card-content">
      <p><%= sheet.description %></p>
      <div class="align-center">

      </div>
    </div>
    <div class="valign-wrapper">
      <a href="/sheets/<%= sheet.id %>" class="btn">View Sheet</a>
      <div class="valign">
        <% if @root %>
        <% else %>
          <% if sheet.owner %>
            <%= image_tag sheet.owner.gravatar_url, class: "circle responsive-img" %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
